{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Docker",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "172.20.0.5",
            "django": true,
            "postDebugTask": "make down",
            "showReturnValue": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/webclient/src",
            "postDebugTask": "make down"
        }
    ],
    "compounds": [
        {
            "name": "Full",
            "preLaunchTask": "make upbd",
            "configurations": [
                "Django Docker",
                "Launch Chrome"
            ]
        }
    ]
}
